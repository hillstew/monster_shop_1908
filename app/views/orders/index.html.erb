<h1>Your Orders</h1>

<% @user.orders.each do |order| %>
  <section id = "order-<%= order.id %>">
    <p>Order Id: <%= link_to "#{order.id}", "/profile/orders/#{order.id}" %></p>
    <p>Order Date: <%= order.created_at %></p>
    <p>Last Updated: <%= order.updated_at %></p>
    <p>Status: <%= order.status %></p>
    <p>Total Items: <%= number_to_currency(order.total_items) %></p>
    <p>Grand Total: <%= number_to_currency(order.grandtotal) %></p>
  </section>
<% end %>
