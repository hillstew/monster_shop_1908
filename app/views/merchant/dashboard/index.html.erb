<h1><%= @user.merchant.name %></h1>
<center>
  <p><%= @user.merchant.address %></p>
  <p><%= "#{@user.merchant.city}, #{@user.merchant.state} #{@user.merchant.zip}" %></p>
  <p><%= link_to "My Items", "/merchant/items" %></p>
  <hr>
  <h2>Merchant Orders</h2>
</center>
<br>
<section class = "grid-container">
<% @user.merchant.pending_orders.each do |order| %>
  <section class= "grid-item", id= "order-<%= order.id %>">
    <%= link_to "Order Id: #{order.id}", "/merchant/orders/#{order.id}" %>
    <p><%= order.created_at %></p>
    <p>Total Quantity: <%= @user.merchant.merch_item_count(order) %></p>
    <p>Total Value: <%= number_to_currency(@user.merchant.merch_total_value(order)) %></p>
  </section>
<% end  %>
</section>
