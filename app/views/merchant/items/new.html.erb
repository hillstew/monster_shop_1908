<h1>Create New Item For <%=link_to @merchant.name, "/merchants/#{@merchant.id}" %></h1>

<center>
  <%= form_for @item, :url => '/merchant/items' do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :price %>
    <%= f.text_field :price %>

    <%= f.label :image %>
    <%= f.text_field :image, :input_html => { :value => 'data:image/png;base64,'} %> %>

    <%= f.label :inventory %>
    <%= f.text_field :inventory %>

    <%= f.submit %>
  <% end %>
</center>
